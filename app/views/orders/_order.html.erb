<div class="columns-2">
    <div class="h-full" id="<%= dom_id order %>">
        <h2>Order ID: <%= order.id %></h2>
        <p>Doctor: <%= render partial: "doctor", locals: { doctor: order.doctor } %></p>
        <p>Total: <%= order.total %></p>
        <%= render partial: "order_item", collection: eval(order.order_items) %>
        <p>Created At: <%= order.created_at %></p>
        <p>Updated At: <%= order.updated_at %></p>
    </div>
    <div class="h-full">
        <% if current_user.customer_care? || current_user.doctor? || current_user.user? %>
            <%= render MessagesComponent.new(order.messages) %>
        <% end %>
        <% if current_user.user? || current_user.doctor? %>
            <%= render partial: "messages/form", locals: { order: order } %>
        <% elsif current_user.customer_care? %>
            <%= render partial: "messages/form", locals: { order: order, customer_care: true } %>
        <% end %>
    </div>
</div>
